<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent"
android:background="@drawable/lockbackground"
android:orientation="vertical"
>

	<ListView 
	android:layout_height="0dip" 
	android:layout_weight="1"
	android:id="@+id/listView1" 
	android:cacheColorHint="#00000000"
	android:layout_width="fill_parent"
	>
	</ListView>
	
<AbsoluteLayout 
android:id="@+id/buttons" 
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true" 
android:layout_alignParentLeft="true"
>

<ImageView
android:id="@+id/widget29"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/barbutton"
>
</ImageView>

<ImageButton
android:id="@+id/widget27"
android:layout_width="90dip"
android:layout_height="60dip"
android:background="@drawable/loadimageberita"
android:onClick="tombolBerita"
android:layout_x="17dip"
android:layout_y="-5dip"
>
</ImageButton>

<ImageButton
android:id="@+id/widget28"
android:layout_width="90dip"
android:layout_height="63dip"
android:background="@drawable/loadimagebutton"
android:onClick="tombolAgenda"
android:layout_x="135dip"
android:layout_y="-10dip"
>
</ImageButton>

<ImageButton
android:id="@+id/widget29"
android:layout_width="90dip"
android:layout_height="60dip"
android:background="@drawable/loadimagestreaming"

android:layout_x="250dip"
android:layout_y="-7dip"
>
</ImageButton>

<ImageButton
android:id="@+id/widget30"
android:layout_width="90dip"
android:layout_height="60dip"
android:background="@drawable/loadimageabout"
android:layout_x="380dip"
android:layout_y="-1dip"
>
</ImageButton>
	
	<TextView 
	android:text="Status: " 
	android:id="@+id/textViewStat" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:layout_x="0dip"
	android:layout_y="55dip"
	android:textStyle="italic">
	</TextView>

</AbsoluteLayout>

</LinearLayout >
