<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent"
android:background="@drawable/lockbackground"
android:orientation="vertical"
>

	<ListView 
	android:layout_height="0dip" 
	android:layout_weight="1"
	android:id="@+id/listView1" 
	android:cacheColorHint="#00000000"
	android:layout_width="fill_parent"
	>
	</ListView>
	
<AbsoluteLayout 
android:id="@+id/buttons" 
android:layout_width="wrap_content"
android:layout_height="80dip"
android:layout_alignParentBottom="true" 
android:layout_alignParentLeft="true"
android:orientation="vertical"
>

<ImageView
android:id="@+id/widget29"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/barbutton"
>
</ImageView>
	
	<TextView 
	android:text="Status: " 
	android:id="@+id/textViewStat" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:layout_x="0dip"
	android:layout_y="55dip"
	android:textStyle="italic">
	</TextView>


	<ImageButton
	    android:id="@+id/widget27"
	    android:layout_width="60dip"
	    android:layout_height="60dip"
	    android:layout_x="14dp"
	    android:layout_y="0dp"
	    android:background="@drawable/loadimageupdate"
	    android:onClick="tombolUpdate" />

	<ImageButton
	    android:id="@+id/widget28"
	    android:layout_width="60dip"
	    android:layout_height="63dip"
	    android:layout_x="248dp"
	    android:layout_y="-7dp"
	    android:background="@drawable/loadimageback"
	    android:onClick="tombolback" />

</AbsoluteLayout>

</LinearLayout >
